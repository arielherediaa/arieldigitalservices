---
// index.astro

import '../styles/global.css'; // We still need this for base Tailwind styles
import { Image } from 'astro:assets';
import headshot from '../assets/headshot.png';
import { ViewTransitions } from 'astro:transitions';
import mayoroofPreview from '../assets/portfolio/mayoroof.png';
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ariel Digital Solutions | Web Development & Digital Marketing</title>
    <meta name="description" content="Freelance web developer and digital marketing consultant, currently a UGA student and Fortune 500 intern. Specializing in websites, SEO, and marketing for small businesses and contractors.">
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <script src="https://unpkg.com/typeit@8.7.1/dist/index.umd.js"></script>
    
    <ViewTransitions />

    <!-- This script runs first to set the theme and prevent any flashing -->
    <script is:inline>
        const theme = (() => {
            if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
                return localStorage.getItem('theme');
            }
            if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
                return 'dark';
            }
            return 'light';
        })();

        if (theme === 'dark') {
            document.documentElement.classList.add('dark');
        }

        document.documentElement.classList.add('js');
    </script>

    <!-- This style block now defines all our colors as CSS variables -->
    <style is:global>
        :root {
            /* Light Mode Colors */
            --bg-primary: #f9fafb; /* gray-50 */
            --bg-secondary: #ffffff; /* white */
            --bg-tertiary: #f9fafb; /* gray-50 */
            --bg-accent-subtle: #ecfeff; /* cyan-50 */
            --header-bg: rgba(255, 255, 255, 0.8);
            --header-border: transparent;
            --card-ring: transparent;
            --text-primary: #1f2937; /* gray-800 */
            --text-secondary: #4b5563; /* gray-600 */
            --text-headings: #111827; /* gray-900 */
            --text-accent: #0891b2; /* cyan-600 */
            --text-accent-faded: #0e7490; /* cyan-700 */
            --tag-bg: #cffafe; /* cyan-100 */
            --tag-text: #155e75; /* cyan-800 */
            --footer-bg: #1f2937; /* gray-800 */
            --footer-text: #d1d5db; /* gray-400 */
        }

        html.dark {
            /* Dark Mode Colors */
            --bg-primary: #111827; /* gray-900 */
            --bg-secondary: #00000020; /* black/20 */
            --bg-tertiary: #1f2937; /* gray-800 */
            --bg-accent-subtle: #1f2937; /* gray-800 */
            --header-bg: rgba(17, 24, 39, 0.8);
            --header-border: #374151; /* gray-700 */
            --card-ring: #4b5563; /* gray-600 */
            --text-primary: #d1d5db; /* gray-300 */
            --text-secondary: #9ca3af; /* gray-400 */
            --text-headings: #ffffff; /* white */
            --text-accent: #67e8f9; /* cyan-300 */
            --text-accent-faded: #a5f3fc; /* cyan-200 */
            --tag-bg: #164e63; /* cyan-900/50 */
            --tag-text: #67e8f9; /* cyan-300 */
            --footer-bg: #00000050; /* black/50 */
            --footer-text: #9ca3af; /* gray-400 */
        }

        /* Apply variables to elements */
        body {
            background-color: var(--bg-primary);
            color: var(--text-primary);
            transition: background-color 0.3s, color 0.3s;
        }
    </style>
</head>
<body class="antialiased font-sans">

    <!-- Header & Navigation -->
    <header class="backdrop-blur-lg sticky top-0 z-50 shadow-sm" style="background-color: var(--header-bg); border-bottom: 1px solid var(--header-border);">
        <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
            <a href="/" class="flex items-center space-x-3" transition:animate="fade">
                <img src="/logo.png" alt="Ariel Digital Solutions Logo" class="h-10 w-auto">
                <span class="text-xl font-bold tracking-tight hidden sm:block" style="color: var(--text-headings);">Ariel Digital Solutions</span>
            </a>
            <div class="hidden md:flex items-center space-x-6">
                <a href="#services" class="transition-colors duration-300" style="color: var(--text-secondary);">Services</a>
                <a href="#portfolio" class="transition-colors duration-300" style="color: var(--text-secondary);">Portfolio</a>
                <a href="#about" class="transition-colors duration-300" style="color: var(--text-secondary);">About</a>
                <a href="#contact" class="transition-colors duration-300" style="color: var(--text-secondary);">Contact</a>
                
                <!-- Theme Toggle Button -->
                <button id="theme-toggle" type="button" class="p-2 rounded-full hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-cyan-500" style="color: var(--text-secondary);">
                    <svg id="theme-toggle-dark-icon" class="h-5 w-5 hidden" fill="currentColor" viewBox="0 0 20 20"><path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path></svg>
                    <svg id="theme-toggle-light-icon" class="h-5 w-5 hidden" fill="currentColor" viewBox="0 0 20 20"><path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" fill-rule="evenodd" clip-rule="evenodd"></path></svg>
                </button>
            </div>
            <button id="mobile-menu-button" class="md:hidden p-2 rounded-md" style="color: var(--text-secondary);">
                <svg id="menu-open-icon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" /></svg>
                <svg id="menu-close-icon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
            </button>
        </nav>
        <div id="mobile-menu" class="hidden md:hidden px-6 pb-4" style="border-top: 1px solid var(--header-border);">
            <a href="#services" class="block py-2" style="color: var(--text-secondary);">Services</a>
            <a href="#portfolio" class="block py-2" style="color: var(--text-secondary);">Portfolio</a>
            <a href="#about" class="block py-2" style="color: var(--text-secondary);">About</a>
            <a href="#contact" class="block py-2" style="color: var(--text-secondary);">Contact</a>
        </div>
    </header>

    <main>
        <!-- Hero Section -->
        <section id="home" class="py-24 md:py-32" style="background-color: var(--bg-secondary);">
            <div class="container mx-auto px-6 text-center">
                <h1 class="text-4xl md:text-6xl font-extrabold leading-tight" style="color: var(--text-headings);" transition:animate="slide-up">
                    Building Digital Experiences,<br>
                    <span id="typing-animation" style="color: var(--text-accent);"></span>
                </h1>
                <p class="mt-6 max-w-2xl mx-auto text-lg" style="color: var(--text-secondary);" transition:animate="fade-up" data-delay="200">
                    I'm a passionate freelance developer and marketing consultant, helping businesses establish a strong online presence.
                </p>
                <div class="mt-8 flex flex-col sm:flex-row justify-center gap-4" transition:animate="fade-up" data-delay="400">
                    <a href="#contact" class="bg-cyan-500 text-white px-8 py-3 rounded-full font-bold text-lg hover:bg-cyan-600 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1">Get a Free Quote</a>
                    <a href="#services" class="px-8 py-3 rounded-full font-bold text-lg transition-all duration-300 border" style="background-color: var(--bg-secondary); color: var(--text-accent); border-color: var(--header-border);">Learn More</a>
                </div>
            </div>
        </section>

        <!-- Services Section -->
        <section id="services" class="py-20 overflow-hidden" style="background-color: var(--bg-secondary);">
            <div class="container mx-auto px-6">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold" style="color: var(--text-headings);" data-animate-on-scroll>A Full Suite of Digital Services</h2>
                    <p class="mt-4 text-lg" style="color: var(--text-secondary);" data-animate-on-scroll>Solutions to build, grow, and scale your business online.</p>
                </div>
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
                    <!-- Service Cards -->
                    <div class="p-8 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2" style="background-color: var(--bg-tertiary); ring: 1px solid var(--card-ring);" data-animate-on-scroll>
                        <div class="mb-4" style="color: var(--text-accent);"><svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" /></svg></div>
                        <h3 class="text-2xl font-semibold mb-3" style="color: var(--text-headings);">Custom Web Development</h3>
                        <p style="color: var(--text-secondary);">Fast, responsive, and SEO-friendly websites built to convert visitors into customers.</p>
                    </div>
                    <!-- Repeat for other cards -->
                     <div class="p-8 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2" style="background-color: var(--bg-tertiary); ring: 1px solid var(--card-ring);" data-animate-on-scroll data-delay="100">
                        <div class="mb-4" style="color: var(--text-accent);"><svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m-1 4h1m5-4h1m-1 4h1" /></svg></div>
                        <h3 class="text-2xl font-semibold mb-3" style="color: var(--text-headings);">Contractor Websites</h3>
                        <p style="color: var(--text-secondary);">Specialized sites for contractors that showcase your work, build trust, and generate leads.</p>
                    </div>
                    <div class="p-8 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2" style="background-color: var(--bg-tertiary); ring: 1px solid var(--card-ring);" data-animate-on-scroll data-delay="200">
                        <div class="mb-4" style="color: var(--text-accent);"><svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7" /></svg></div>
                        <h3 class="text-2xl font-semibold mb-3" style="color: var(--text-headings);">SEO</h3>
                        <p style="color: var(--text-secondary);">Climb the ranks on Google and attract more organic traffic with targeted SEO strategies.</p>
                    </div>
                    <div class="p-8 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2" style="background-color: var(--bg-tertiary); ring: 1px solid var(--card-ring);" data-animate-on-scroll data-delay="300">
                        <div class="mb-4" style="color: var(--text-accent);"><svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a3.001 3.001 0 015.658 0M12 6a3 3 0 11-6 0 3 3 0 016 0zm6 0a3 3 0 11-6 0 3 3 0 016 0z" /></svg></div>
                        <h3 class="text-2xl font-semibold mb-3" style="color: var(--text-headings);">Social Media</h3>
                        <p style="color: var(--text-secondary);">Build your brand and engage with your community through strategic social media management.</p>
                    </div>
                    <div class="p-8 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2" style="background-color: var(--bg-tertiary); ring: 1px solid var(--card-ring);" data-animate-on-scroll data-delay="400">
                        <div class="mb-4" style="color: var(--text-accent);"><svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.354a1.76 1.76 0 01.592-2.088L11 5.882z" /><path d="M11 5.882L15.5 2.5l2.5 4-2.5 4-2.5-4z"/></svg></div>
                        <h3 class="text-2xl font-semibold mb-3" style="color: var(--text-headings);">Digital Marketing</h3>
                        <p style="color: var(--text-secondary);">Comprehensive marketing campaigns, from email marketing to paid ads, to grow your audience.</p>
                    </div>
                    <div class="p-8 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2" style="background-color: var(--bg-tertiary); ring: 1px solid var(--card-ring);" data-animate-on-scroll data-delay="500">
                        <div class="mb-4" style="color: var(--text-accent);"><svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2a4 4 0 00-4-4H3V9h2a4 4 0 004-4V3l5 4-5 4zM15 17v-2a4 4 0 014-4h2V9h-2a4 4 0 01-4-4V3l-5 4 5 4z" /></svg></div>
                        <h3 class="text-2xl font-semibold mb-3" style="color: var(--text-headings);">Tech Consulting</h3>
                        <p style="color: var(--text-secondary);">Expert advice on technology strategy and software selection to optimize your business operations.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Portfolio Section -->
        <section id="portfolio" class="py-20 overflow-hidden" style="background-color: var(--bg-secondary);">
            <div class="container mx-auto px-6">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold" style="color: var(--text-headings);" data-animate-on-scroll>My Featured Project</h2>
                    <p class="mt-4 text-lg" style="color: var(--text-secondary);" data-animate-on-scroll>Here's a look at my latest client work.</p>
                </div>
                <div class="max-w-xl mx-auto">
                    <div class="rounded-xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 flex flex-col" style="background-color: var(--bg-tertiary); ring: 1px solid var(--card-ring);" data-animate-on-scroll>
                        <Image src={mayoroofPreview} alt="Mayor Roof LLC website preview" class="rounded-t-xl object-cover" />
                        <div class="p-8 flex flex-col flex-grow">
                            <h3 class="text-2xl font-semibold mb-2" style="color: var(--text-headings);">Mayor Roof LLC</h3>
                            <p class="mb-4 flex-grow" style="color: var(--text-secondary);">A professional, lead-focused website for a premier roofing contractor. Built to establish trust and streamline the process for requesting free estimates.</p>
                            <div class="mb-4">
                                <span class="inline-block text-xs font-semibold mr-2 px-2.5 py-0.5 rounded-full" style="background-color: var(--tag-bg); color: var(--tag-text);">Astro</span>
                                <span class="inline-block text-xs font-semibold mr-2 px-2.5 py-0.5 rounded-full" style="background-color: var(--tag-bg); color: var(--tag-text);">Tailwind CSS</span>
                            </div>
                            <a href="https://mayoroof.com/" target="_blank" rel="noopener noreferrer" class="mt-auto inline-block text-center bg-cyan-500 text-white px-6 py-2 rounded-full font-semibold hover:bg-cyan-600 transition-colors duration-300">View Live Site</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- About Me Section -->
        <section id="about" class="py-20 overflow-hidden" style="background-color: var(--bg-secondary);">
             <div class="container mx-auto px-6">
                <div class="grid md:grid-cols-5 gap-12 items-center">
                    <div class="md:col-span-2" data-animate-on-scroll>
                        <Image src={headshot} alt="A photo of Ariel" class="rounded-full shadow-2xl mx-auto w-64 h-64 md:w-80 md:h-80 object-cover ring-4 ring-offset-4" style="ring-color: var(--text-accent-faded);" />
                    </div>
                    <div class="md:col-span-3 text-center md:text-left" data-animate-on-scroll data-delay="200">
                        <h2 class="text-3xl md:text-4xl font-bold" style="color: var(--text-headings);">About Me</h2>
                        <p class="mt-4 text-lg" style="color: var(--text-secondary);">I'm a driven and detail-oriented developer with a passion for technology and problem-solving.</p>
                        <ul class="mt-6 space-y-4" style="color: var(--text-primary);">
                            <li class="flex items-start"><svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 flex-shrink-0" style="color: var(--text-accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg><span>Currently studying Computer Science at the <span class="font-semibold">University of Georgia (UGA)</span>.</span></li>
                            <li class="flex items-start"><svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 flex-shrink-0" style="color: var(--text-accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg><span>Gaining real-world experience through an internship at a <span class="font-semibold">Fortune 500 company</span>.</span></li>
                            <li class="flex items-start"><svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 flex-shrink-0" style="color: var(--text-accent);" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg><span>Committed to delivering high-quality, user-centric digital solutions for my freelance clients.</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <!-- Contact Section -->
        <section id="contact" class="py-20" style="background-color: var(--bg-secondary);">
            <div class="container mx-auto px-6 text-center">
                <h2 class="text-3xl md:text-4xl font-bold" style="color: var(--text-headings);" data-animate-on-scroll>Ready to Start a Project?</h2>
                <p class="mt-4 max-w-xl mx-auto text-lg" style="color: var(--text-secondary);" data-animate-on-scroll>Let's connect! I'm excited to learn about your ideas and help bring them to life.</p>
                <div class="mt-8" data-animate-on-scroll><a href="mailto:hello@arieldigitalsolutions.com" class="inline-block bg-cyan-500 text-white px-10 py-4 rounded-full font-bold text-xl hover:bg-cyan-600 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1">hello@arieldigitalsolutions.com</a></div>
            </div>
        </section>
    </main>

    <footer class="text-white py-8" style="background-color: var(--footer-bg);">
        <div class="container mx-auto px-6 text-center">
            <p>&copy; {new Date().getFullYear()} Ariel Digital Solutions. All Rights Reserved.</p>
            <p class="text-sm mt-2" style="color: var(--footer-text);">Designed & Built by Ariel</p>
        </div>
    </footer>

    <script is:inline>
        // This script block now only contains logic that is safe to run after the page loads.
        document.addEventListener('DOMContentLoaded', () => {
            const themeToggleButton = document.getElementById('theme-toggle');
            const darkIcon = document.getElementById('theme-toggle-dark-icon');
            const lightIcon = document.getElementById('theme-toggle-light-icon');

            const updateIcons = () => {
                if (document.documentElement.classList.contains('dark')) {
                    darkIcon.classList.remove('hidden');
                    lightIcon.classList.add('hidden');
                } else {
                    darkIcon.classList.add('hidden');
                    lightIcon.classList.remove('hidden');
                }
            };

            updateIcons(); // Set initial state

            themeToggleButton.addEventListener('click', () => {
                document.documentElement.classList.toggle('dark');
                localStorage.setItem('theme', document.documentElement.classList.contains('dark') ? 'dark' : 'light');
                updateIcons();
            });

            // Mobile Menu Toggle
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            const openIcon = document.getElementById('menu-open-icon');
            const closeIcon = document.getElementById('menu-close-icon');
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
                openIcon.classList.toggle('hidden');
                closeIcon.classList.toggle('hidden');
            });
            const mobileMenuLinks = mobileMenu.querySelectorAll('a');
            mobileMenuLinks.forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenu.classList.add('hidden');
                    openIcon.classList.remove('hidden');
                    closeIcon.classList.add('hidden');
                });
            });

            // Scroll Animation Logic
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const delay = parseInt(entry.target.getAttribute('data-delay') || '0', 10);
                        setTimeout(() => { entry.target.classList.add('visible'); }, delay);
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.1 });
            document.querySelectorAll('[data-animate-on-scroll]').forEach(el => { observer.observe(el); });

            // TypeIt Animation Setup
            new TypeIt("#typing-animation", {
                strings: "One Line of Code at a Time.",
                speed: 75,
                startDelay: 900,
                cursorChar: "_",
                waitUntilVisible: true,
                lifelong: true,
            }).go();
        });
    </script>
    <style is:global>
        /* Keep scroll animations and other global styles here */
        html.js [data-animate-on-scroll] { opacity: 0; transform: translateY(20px); }
        html.js [data-animate-on-scroll].visible { opacity: 1; transform: translateY(0); }
        [data-animate-on-scroll] { transition: opacity 0.6s ease-out, transform 0.6s ease-out; }
        .ti-cursor { color: var(--text-accent); }
    </style>
</body>
</html>
